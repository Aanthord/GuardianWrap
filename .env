# HTTP Server Configuration
HTTP_PORT=8080

# Database Configuration
# Replace these with actual values for your database connection
DB_HOST=localhost
DB_PORT=5432
DB_USER=guardianwrap_user
DB_PASS=guardianwrap_pass
DB_NAME=guardianwrap_db

# eBPF Program Configuration
EXEC_LOGGER_PATH=/path/to/exec_logger.bpf.o

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/guardianwrap.log

# Jaeger Tracing Configuration
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SERVICE_NAME=guardianwrap

# Prometheus Metrics Configuration
PROMETHEUS_METRICS_PORT=9100

# External Service Endpoints
# Example: External API for threat intelligence or security updates
EXTERNAL_SERVICE_URL=https://api.external-service.com
EXTERNAL_SERVICE_API_KEY=your_api_key_here

# Additional Configuration
# Add any additional environment variables your application might need
